@using RealState.Core.Application.ViewModels.Properties

@model PropertyDetailViewModel

@{
    ViewData["Title"] = "Detalle de propiedad";
    List<String> fotos = ViewBag.Fotos;
    int i = 1;
}


<div class="container-fluid">
    <div class="row">
       <div class="col-6">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                  @foreach(var item in fotos){
                        if (i == 1)
                        {
                             <div class="carousel-item active">
                              <img class="d-block w-100" src="~/Images//Products/@Model.Id/@item" >
                            </div>
                        }
                       
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Images//Products/@Model.Id/@item" />
                        </div>

                        i++;
                    }
                    
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <div>
                <p>Codigo: @Model.Identifier <b></b></p>
                <h3>@Model.Type</h3>
                <hr />
                <p>@Model.SaleType</p>
                <h3 class="text-danger">$ @Model.Price</h3>
                <hr />
                <div class="row">
                    <div style="background-color: #E4E5E6; float:left;"><img src="~/Images/Icon/shower.jpg" id="CardFooterIcon" height="50" width="50" />  @Model.BedRooms Habitacion(es) </div>
                    <div style="background-color: #E4E5E6; float:left;"><img src="~/Images/Icon/shower.jpg id="CardFooterIcon" height="50" width="50" />  @Model.BathRooms Baño(s) </div>
                    <div style="background-color: #E4E5E6; float:left;"><img src="~/Images/Icon/size.png" id="CardFooterIcon" height="50" width="50" />  @Model.Size mt </div>

                </div>
                <hr />
                <h5>Descripcion</h5>
                <p>@Model.Description</p>
            </div>
       </div>
       <div class="col-4 offset-2" id="detail">
           <h4>Estas Interesado(a)? Solicita Asesoria!</h4>
           
           <h3><img src="@Model.UserPhoto" width="100" height="100" style=" border-radius: 50%;" /> @Model.UserName</h3>
           <h5><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-phone" viewBox="0 0 16 16"> <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z"/><path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/></svg> Celular</h5>
           <p style="color: #8EBCDF;">@Model.UserTel</p>
           <h5><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16"><path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/></svg> Email</h5>
           <p style="color: #8EBCDF;">@Model.UserEmail</p>
       </div>
    </div>
    <div class="row">
    <div class="card">
        <div class="card-body">
            <h4>Mejoras</h4>
            <p>@Model.Upgrates</p>
        </div>
    </div>
    
    </div>
     <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</div>