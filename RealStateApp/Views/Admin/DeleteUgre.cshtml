@using RealState.Core.Application.ViewModels.Properties


@model SaveUpgradeViewModel
@{
    ViewData["Title"] = "Eliminando mejora";
}

<div class="row" id="contenedorClient">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">¿Está seguro que desea eliminar la mejora?</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Admin" asp-action="DeleteUpgrate">
                    <input hidden asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>    
    </div>
</div>
